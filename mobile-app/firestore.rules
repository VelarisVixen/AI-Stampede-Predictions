rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // SOS Alerts - Allow read/write for all authenticated users
    match /sos-alerts/{document} {
      allow read, write: if request.auth != null;
    }
    
    // System Alerts - Allow read for all authenticated users, write for admins only
    match /alerts/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.token.admin == true || request.auth.uid in resource.data.admins);
    }
    
    // Analysis Logs - Allow read/write for authenticated users
    match /analysis-logs/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Notification Logs - Allow read/write for authenticated users
    match /notificationLogs/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Users - Allow users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
