rules_version = '2';

// Firebase Storage Security Rules for SafeGuard SOS System
service firebase.storage {
  match /b/{bucket}/o {
    // Allow all users to upload SOS videos to main folder (demo environment)
    match /sos-videos/{videoId} {
      allow read, write: if true; // More permissive for development
    }
    
    // Allow authenticated users to upload to their user folder
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
                        request.auth.uid == userId;
    }
    
    // Allow authenticated users to read public resources
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Emergency responders can read all SOS videos (add specific UIDs in production)
    match /sos-videos/{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
